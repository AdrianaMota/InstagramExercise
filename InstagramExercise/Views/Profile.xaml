<?xml version="1.0" encoding="UTF-8"?>
<ContentPage Title= "{Binding Name}"
             Padding="20"
                 xmlns:controls="clr-namespace:ImageCircle.Forms.Plugin.Abstractions;assembly=ImageCircle.Forms.Plugin"
                 xmlns="http://xamarin.com/schemas/2014/forms"
                xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                x:Class="InstagramExercise.Views.Profile">
    <StackLayout>
        <Label Text= "{Binding Name}" FontSize="12" FontAttributes="Bold"/>
        <controls:CircleImage Source="{Binding ImageUrl}" HeightRequest="60" WidthRequest="60" Aspect="AspectFill" HorizontalOptions="Start"/>
        <Label Text="{Binding Description}" FontSize="9" FontAttributes="Italic" TextColor="Gray"/>
    </StackLayout>
</ContentPage>
